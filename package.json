{
  "name": "mtbrowser",
  "version": "0.1.0",
  "description": "MountainTools browser",
  "main": "server/index.js",
  "engines": {
    "yarn": "1.15.2"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "cd client && yarn build",
    "dev": "NODE_OPTIONS=--max_old_space_size=4096 concurrently --kill-others-on-fail \"yarn start\" \"cd client && yarn watch\"",
    "postinstall": "cd client && yarn install --production=false && yarn run build",
    "start": "node server/index.js"
  },
  "author": "Jeremy Magland",
  "license": "Apache-2.0",
  "dependencies": {
    "axios": "^0.19.0",
    "express": "^4.17.1",
    "json-stable-stringify": "^1.0.1",
    "text-encoding": "^0.7.0"
  },
  "devDependencies": {
    "concurrently": "^4.1.1"
  }
}
